                <label asp-for="EstudianteID" class="control-label"></label>
                <select asp-for="EstudianteID" class="form-control" asp-items="ViewBag.Estudiante"></select>
            </div>
            <div class="form-group">
                <label asp-for="DocenteID" class="control-label"></label>
                <select asp-for="DocenteID" class="form-control" asp-items="ViewBag.Docente"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoActividadID" class="control-label"></label>
                <select asp-for="TipoActividadID" class="form-control" asp-items="ViewBag.Actividad"></select>
            </div>
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
